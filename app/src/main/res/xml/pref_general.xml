<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="none"
        android:inputType="text"
        android:key="server_url"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:hint="http://"
        android:title="@string/pref_title_server_url" />

    <EditTextPreference
        android:capitalize="none"
        android:inputType="text"
        android:key="server_login"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_server_login" />

    <EditTextPreference
        android:capitalize="none"
        android:inputType="textPassword"
        android:key="server_password"
        android:password="true"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_server_password" />

    <EditTextPreference
        android:capitalize="none"
        android:inputType="textCapWords"
        android:key="server_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_server_name" />

</PreferenceScreen>
